derbyGray = #696969

body
  background-color: derbySand
  font-family: "Source sans pro"


.editor
  width: 100%
  max-width: 820px

  .CodeMirror
    width: 100%
    height: 140px

.renderers
  margin: 10px
  width: 100%
  height: 300px
  .render
    float:left
    position:relative
    img
      margin-top: 10px
      height: 230px
  .inside
    position:absolute
    padding-left: 5px
    padding-top: 5px

  .browser .inside
    top: 55px
    left: 25px
    height: 160px
    overflow:hidden

  .email .inside
    top: 105px
    left: 75px
    height: 100px
    overflow:hidden


  .mobile img
    margin-top: -10px
    height: 230px
  .mobile .inside
    top: 59px
    margin-left: 39px
    height: 161px
    width: 134px
    overflow: hidden
    background-color: white

@media (max-width: 740px)
  .inputs
    margin-top: 30px
    float:left
    clear: left

.CodeMirror.cm-s-default { background: derbyBlackBrown; color: derbyKhakiLight;  }
.cm-s-default div.CodeMirror-selected {background: #064968 !important;} /* 33322B*/
.cm-s-default span.cm-attribute { color:derbyPink; }
.cm-s-default span.cm-tag { color:derbyRed; }
.cm-s-default span.cm-string { color: derbyTeal; }
.cm-s-default span.cm-string-2 {color: derbyTeal;}
.cm-s-default span.cm-comment { color: #AFB4B4;}
.cm-s-default span.cm-property {color: #FDA676;}
.cm-s-default span.cm-number { color: #FF92EE;}
.cm-s-default span.cm-keyword { color: #FFFF18; }
.cm-s-default .CodeMirror-cursor { border-left: 1px solid white !important; }

*
  box-sizing: border-box

.charts
  width: 350px
  float:left
  height: 200px
  .bar
    fill: derbyTeal

.inputs
  margin: 10px
  min-width: 350px
  max-width: 350px
  width: calc(100% - 320px)
  float: right
  height: 200px

  .datum
    display:inline-block
    //float:left
    //clear:left
  .d-input
    float:left
    margin-left: 10px
    input
      margin: 0
  .button
    margin: 1px 5px
    padding 1px 8px
    background: derbyBrick
    color: derbySeaweed
    border: none
    border-radius: 10px
    cursor: pointer
    font-family: inherit
    font-size: inherit
    line-height: inherit
  .plus
    color: derbySand
    background: derbyTeal
  .inactive
    background: lightgray
  .add
    margin 5px 10px
    margin-top: 5px
    margin-left: 10px
    //float:left
    //clear:left
